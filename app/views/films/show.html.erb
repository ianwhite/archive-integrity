<article data-image-src="<%= film.image_url %>" data-freshness="<%= film.freshness %>">
  <h1><%= film.title %></h1>
  <h2><%= film.year %></h2>
  <div class="people">
    <% film.people.map(&:name).each do |name| %>
      <%= link_to name, "/?q=#{name}" %>
    <% end %>
  </p>

  <p class="links">
    <%= link_to "Back", root_path %>
    <%= link_to "View #{film.title}", interactions_path(film_id: film.id), method: 'post' %>
  </p>
</article>